<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="favicon" sizes="16x16" href="../favicons/customer/favicon-16x16.png">
    <link rel="favicon" sizes="32x32" href="../favicons/customer/favicon-32x32.png">
    <link rel="android-chrome" sizes="192x192" href="../favicons/customer/android-chrome-192x192.png">
    <link rel="android-chrome" sizes="512x512" href="../favicons/customer/android-chrome-512-512.png">
    <link rel="icon" href="../favicons/customer/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%- include("../components/scriptsAndLinks") %>
    <link rel="stylesheet" href="../css/general/profile_bone_structure.css">
    <link rel="stylesheet" href="../css/developer/profile_settings.css">
</head>

<% if(user.theme === "Dark") {%>

<body class="dark">
    <% }else{%>

    <body>
        <% } %>
        <%- include("customer-navigation") %>
        <main class="main-container">
            <% if(!user.verified){%>
            <section class="validation">
                Please, check your email in order to verify your account!
            </section>
            <% } %>
            <section class="profile_settings">
                <% for(let privacy_setting of user.privacy) { %>
                <label class="switch" for=<%=privacy_setting.objKey%>><%=privacy_setting.header%>
                    <span class="slider"><span class="ball"></span></span>
                    <% if(privacy_setting.setting === true) { %>
                    <input type="checkbox" class="settingInput" checked id=<%=privacy_setting.objKey%>>
                    <% }else { %>
                    <input type="checkbox" class="settingInput" id=<%=privacy_setting.objKey%>>
                    <% } %>
                    <span class="slider"><span class="ball"></span></span>
                </label>
                <% } %>
                <label class="switch" for="theme">Change UI Theme
                    <% if(user.theme === "Light") { %>
                    <input type="checkbox" class="settingInput" checked id="theme">
                    <% }else { %>
                    <input type="checkbox" class="settingInput" id="theme">
                    <% } %>
                    <span class="slider slider-theme"><span class="ball theme-ball"></span></span>
                </label>
                <div class="help">
                    <div class="help-cover">
                        <p class="visible-help">
                            <svg>
                                <use href="../symbol-defs.svg#icon-eye"></use>
                            </svg>
                            Visible
                        </p>
                        <p class="hidden-help">
                            <svg>
                                <use href="../symbol-defs.svg#icon-eye-blocked"></use>
                            </svg>
                            Hidden
                        </p>
                    </div>
                </div>
                <div class="options">
                    <a href="/customer/profile" class="navLink">View your Account Information</a>
                    <a href="/customer/general" class="navLink">Return to General tab</a>
                </div>
            </section>
        </main>
        <script src="../javascript/customer/customer-settings.js"></script>
        <script src="../javascript/findLoggedInUser.js"></script>
        <%- include("customer-footer") %>